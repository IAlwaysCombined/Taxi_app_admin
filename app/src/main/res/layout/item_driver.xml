<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="410dp">

    <androidx.cardview.widget.CardView
        style="@style/card_view_style"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/main_liner_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/driver_image"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="20dp"
                        android:src="@mipmap/ic_launcher" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_driver_item_description"
                        style="@style/description_data_text_view_style"
                        android:text="@string/name_driver_item_description_text_view" />

                    <TextView
                        android:id="@+id/name_driver_item"
                        style="@style/data_text_view_style"
                        android:text="Владислав" />

                    <View style="@style/under_line_view_style" />

                    <TextView
                        android:id="@+id/last_name_driver_item_description"
                        style="@style/description_data_text_view_style"
                        android:text="@string/last_name_driver_item_description_text_view" />

                    <TextView
                        android:id="@+id/last_name_driver_item"
                        style="@style/data_text_view_style"
                        android:text="Прокофьев" />

                    <View style="@style/under_line_view_style" />

                    <TextView
                        android:id="@+id/surname_driver_item_description"
                        style="@style/description_data_text_view_style"
                        android:text="@string/surname_driver_item_description_text_view" />

                    <TextView
                        android:id="@+id/surname_driver_item"
                        style="@style/data_text_view_style"
                        android:text="Андреевич" />

                    <View style="@style/under_line_view_style" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/phone_number_driver_item_description"
                style="@style/description_data_text_view_style"
                android:text="@string/phone_number_driver_item_description_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_liner_layout" />

            <TextView
                android:id="@+id/phone_number_driver_item"
                style="@style/data_text_view_style"
                android:text="+380444618061"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phone_number_driver_item_description" />

            <TextView
                android:id="@+id/car_number_driver_item_description"
                style="@style/description_data_text_view_style"
                android:text="@string/car_number_driver_item_description_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_liner_layout" />

            <TextView
                android:id="@+id/car_number_driver_item"
                style="@style/data_text_view_style"
                android:text="АК9265АК"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/car_number_driver_item_description" />

            <View
                android:layout_width="match_parent"
                style="@style/under_line_view_style"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phone_number_driver_item" />

            <TextView
                android:id="@+id/car_driver_item_description"
                style="@style/description_data_text_view_style"
                android:text="@string/car_driver_item_description_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phone_number_driver_item" />

            <TextView
                android:id="@+id/car_driver_item"
                style="@style/data_text_view_style"
                android:text="Audi A4 (B8)"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/car_driver_item_description" />

            <View
                style="@style/under_line_view_style"
                android:layout_width="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/car_driver_item" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/car_driver_item">

                <Button
                    android:id="@+id/bloc_driver"
                    style="@style/btn_style"
                    android:layout_height="50dp"
                    android:layout_width="120dp"
                    android:textSize="10sp"
                    android:text="@string/bloc_driver_btn_text_drivers"
                    tools:ignore="SmallSp" />

                <Button
                    android:id="@+id/delete_driver"
                    style="@style/btn_style"
                    android:layout_height="50dp"
                    android:layout_width="120dp"
                    android:textSize="12sp"
                    android:text="@string/delete_order_driver_btn_text"
                    tools:ignore="SmallSp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>