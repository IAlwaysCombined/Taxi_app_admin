<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Taxi_app_admin" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <!-- Custom theme card view. -->
    <style name="card_view_style" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardMaxElevation">6dp</item>
        <item name="contentPaddingBottom">24dp</item>
        <item name="contentPaddingTop">24dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>
    <!-- Custom theme description data text view. -->
    <style name="description_data_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">10sp</item>
    </style>
    <!-- Custom theme data text view. -->
    <style name="data_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!-- Custom theme underline. -->
    <style name="under_line_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <!-- Custom theme btn. -->
    <style name="btn_style">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_add_delete_order_create_driver_account</item>
        <item name="android:layout_margin">20dp</item>
    </style>
</resources>